/**index.wxss**/
page,
view,
text,
image,
button,
input,
slider,
switch {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Microsoft YaHei', Arial, sans-serif;
}

page {
  background-color: #f5f7fa;
  color: #333;
  min-height: 100vh;
  padding: 20rpx;
}

.container {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 800rpx;
  margin: 30rpx auto;
  padding: 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
}

.upload-area {
  border: 4rpx dashed #3498db;
  border-radius: 12rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  cursor: pointer;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.upload-area:hover {
  background-color: rgba(52, 152, 219, 0.1);
  border-color: #2980b9;
}

.upload-icon {
  font-size: 80rpx;
  color: #3498db;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 10rpx;
}

.upload-subtext {
  font-size: 24rpx;
  color: #7f8c8d;
}

.error-message {
  background-color: white;
  color: #e74c3c;
  text-align: center;
  margin-top: 10rpx;
  font-size: 24rpx;
}

.settings {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.form-group {
  margin-bottom: 30rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.form-label {
  margin-bottom: 10rpx;
  font-weight: bold;
  color: #34495e;
  font-size: 28rpx;
}

.range-value {
  min-width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #34495e;
}

.form-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #7f8c8d;
}

.picker {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  font-size: 28rpx;
  text-align: center;
}

.size-inputs {
  display: flex;
  gap: 20rpx;
}

.input-item {
  flex: 1;
}

.checkbox-group {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.button-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.button-container .button {
  width: 100%;
}

.upload-btn {
  background-color: #3498db;
  color: white;
}

.download-btn {
  background-color: #2ecc71;
  color: white;
}

.button[disabled] {
  opacity: 0.6;
}

.button {
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  transition: background-color 0.3s ease;
}

.back-btn {
  background-color: #95a5a6;
  color: white;
  flex: 1;
}

.compress-btn {
  background-color: #3498db;
  color: white;
  flex: 2;
}

.download-btn {
  background-color: #2ecc71;
  color: white;
}

.preview-container {
  margin-top: 20rpx;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.preview-box {
  flex: 1;
  min-width: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
}

.preview-title {
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.preview-image {
  max-width: 100%;
  max-height: 300rpx;
  margin-bottom: 20rpx;
}

.image-info {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .container {
    padding: 20rpx;
    border-radius: 0;
    box-shadow: none;
  }

  .image-preview {
    flex-direction: column;
  }

  .button {
    padding: 15rpx 0;
    font-size: 26rpx;
  }

  .title {
    font-size: 36rpx;
  }

  /* .upload-area {
    padding: 30rpx 10rpx;
  } */

  .upload-icon {
    font-size: 60rpx;
  }
}

/* 触摸设备优化 */
.touch-device .button, .touch-device .upload-area {
  min-height: 88rpx; /* 确保触摸目标足够大 */
}

.touch-device slider {
  height: 60rpx; /* 增大滑块区域 */
}
